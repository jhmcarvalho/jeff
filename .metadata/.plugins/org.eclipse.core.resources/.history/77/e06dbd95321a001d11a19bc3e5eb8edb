package aula_dev;

import java.util.Scanner;

public class Xuxa {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int qtd;
		int i;
		
		System.out.println("Digite a quantidade de patinhos que foram passear: ");
		qtd = sc.nextInt();
		
		for (i = 1; i >= qtd; i++){
			System.out.println( i+ " patinhos foram passear \n "
								+ "Além das montanhas \n"
								+ "Para brincar \n"
								+ "A mamãe gritou: Quá, quá, quá, quá \n"
								+ "Mas só " + (i-1) + " patinhos voltaram de lá. \n"
								+ "**------------------------------------------------**");



//
//A mamãe patinha foi procurar
//Além das montanhas
//Na beira do mar
//A mamãe gritou: Quá, quá, quá, quá
//E os n patinhos voltaram de lá.
//");
		}

	}

}
