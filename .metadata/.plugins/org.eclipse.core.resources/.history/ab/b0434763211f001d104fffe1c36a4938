package frases;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class AdicionarFrase {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
	    int i;
	    String frase;

	    System.out.printf("Informe o n√∫mero para a tabuada:\n");
	    frase = ler.nextLine();

	    FileWriter arq = null;
		try {
			arq = new FileWriter("D:/Frases/Novas_frases.txt");
		} catch (IOException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
	    PrintWriter gravarArq = new PrintWriter(arq);

	    gravarArq.printf("+-------------+%n");
	    for (i=1; i<=1; i++) {
	      gravarArq.println(frase);
	    }
	    gravarArq.printf("+-------------+%n");

	    try {
			arq.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	    System.out.printf("\nSalvo com sucesso", frase);
	  }

	}